<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/expenses_layout_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightgreen"
    tools:context=".activity.ExpensesActivity">

    <TextView
        android:id="@+id/title_gastos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Histórico de gastos"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:fontFamily="@font/poppins_bold"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/time_filter_toggle_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/rounded_filter_bg" app:singleSelection="true"
        app:checkedButton="@id/button_mes"
        app:selectionRequired="true"
        app:cornerRadius="24dp"
        app:strokeColor="@android:color/transparent"
        app:layout_constraintTop_toBottomOf="@+id/title_gastos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_dia"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Dia"
            android:textColor="@color/filter_button_text_color"
            android:textStyle="bold"
            android:textSize="16sp"
            app:cornerRadius="20dp"
            app:backgroundTint="@color/filter_button_background_selector" app:rippleColor="@android:color/transparent"
            style="@style/Widget.Material3.Button.TextButton"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_semana"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Semana"
            android:textColor="@color/filter_button_text_color"
            android:textStyle="bold"
            android:textSize="16sp"
            app:cornerRadius="20dp"
            app:backgroundTint="@color/filter_button_background_selector"
            app:rippleColor="@android:color/transparent"
            style="@style/Widget.Material3.Button.TextButton"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_mes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Mês"
            android:textColor="@color/filter_button_text_color"
            android:textStyle="bold"
            android:textSize="16sp"
            app:cornerRadius="20dp"
            app:backgroundTint="@color/filter_button_background_selector"
            app:rippleColor="@android:color/transparent"
            style="@style/Widget.Material3.Button.TextButton"/>

    </com.google.android.material.button.MaterialButtonToggleGroup>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_expenses"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:clipToPadding="false"
        android:paddingBottom="16dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@+id/time_filter_toggle_group"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:listitem="@layout/item_gastos"/>

</androidx.constraintlayout.widget.ConstraintLayout>