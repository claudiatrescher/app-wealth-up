<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0F7FA"
    tools:context=".activity.ExpensesActivity">

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content'"
        android:text="Gastos"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:fontFamily="@font/poppins_bold"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/time_filter_toggle_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/rounded_filter_bg"
        app:singleSelection="true"
        app:checkedButton="@id/button_mes"
        app:selectionRequired="true"
        app:cornerRadius="24dp"
        app:strokeColor="@android:color/transparent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_dia"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Dia"
            android:textColor="@color/filter_button_text_color"
            android:textStyle="bold"
            android:textSize="16sp"
            app:cornerRadius="20dp"
            app:backgroundTint="@color/filter_button_background_selector"
            app:rippleColor="@android:color/transparent"
            style="@style/Widget.Material3.Button.TextButton"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_semana"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Semana"
            android:textColor="@color/filter_button_text_color"
            android:textStyle="bold"
            android:textSize="16sp"
            app:cornerRadius="20dp"
            app:backgroundTint="@color/filter_button_background_selector"
            app:rippleColor="@android:color/transparent"
            style="@style/Widget.Material3.Button.TextButton"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_mes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Mês"
            android:textColor="@color/filter_button_text_color"
            android:textStyle="bold"
            android:textSize="16sp"
            app:cornerRadius="20dp"
            app:backgroundTint="@color/filter_button_background_selector"
            app:rippleColor="@android:color/transparent"
            style="@style/Widget.Material3.Button.TextButton"/>

    </com.google.android.material.button.MaterialButtonToggleGroup>

    <TextView
        android:id="@+id/textViewDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ter, 27 de Maio"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:fontFamily="@font/poppins_regular"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/time_filter_toggle_group"
        app:layout_constraintStart_toStartOf="@+id/time_filter_toggle_group" />

    <TextView
        android:id="@+id/textViewTotalExpenses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="R$ 100,50"
        android:textColor="@android:color/black"
        android:textSize="32sp"
        android:fontFamily="@font/poppins_bold"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewDate"
        app:layout_constraintStart_toStartOf="@+id/time_filter_toggle_group" />

    <com.example.wealthup.view.MyBarChartView
        android:id="@+id/barChartView"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewTotalExpenses"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/historyHeaderLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/barChartView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Histórico de gastos"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:fontFamily="@font/poppins_bold" />

        <ImageView
            android:id="@+id/imageViewArrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/arrow_forward_ios_24px"
            app:tint="@android:color/black"
            android:contentDescription="Ir para histórico de gastos"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"/> </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewPreviewExpenses"
        android:layout_width="0dp"
        android:layout_height="wrap_content" android:layout_marginTop="16dp"
        android:layout_marginHorizontal="24dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@+id/historyHeaderLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0"
        tools:itemCount="3" tools:listitem="@layout/item_gastos" />

</androidx.constraintlayout.widget.ConstraintLayout>